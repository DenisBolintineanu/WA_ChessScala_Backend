# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# Client routes

GET     /clientRequest/createNewGameID       controllers.ClientController.createNewGame()

+ nocsrf
POST    /clientRequest/move                  controllers.ClientController.doMove()

+ nocsrf
POST    /clientRequest/gameboard             controllers.ClientController.getGameBoard()

+ nocsrf
POST    /clientRequest/delete                controllers.ClientController.deleteGame()

# Server routes

GET     /index                               controllers.HomeController.index()

GET     /game                                controllers.HomeController.joinGame(id)

GET     /newGame                             controllers.HomeController.newGame()

+ nocsrf
POST    /game                                controllers.HomeController.playChess2(id)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       controllers.Assets.versioned(path="/public", file: Asset)

